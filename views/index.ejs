<%- include('partials/header') %>

<h2>All Posts</h2>
<ul class="posts">
  <% posts.forEach(post => { %>
    <li>
      <h3><a href="/posts/<%= post._id %>"><%= post.title %></a></h3>
      <p><%= post.body.substring(0, 100) %>...</p>
      <small>Posted on <%= post.createdAt.toDateString() %></small>
    </li>
  <% }) %>
</ul>

<%- include('partials/footer') %>