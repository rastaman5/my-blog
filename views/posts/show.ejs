<%- include('../partials/header') %>

<article>
  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
  <small>Posted on <%= post.createdAt.toDateString() %></small>
</article>

<a href="/posts/<%= post._id %>/edit">Edit</a>

<form action="/posts/<%= post._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
  <button type="submit">Delete</button>
</form>

<a href="/posts">Back to Posts</a>

<%- include('../partials/footer') %>